<div id="Login" class="modal-form no-shadow">
  <div class="modal-header">
  </div>
  <div class="form-box">
    <header class="ui-min-header">
      <h3 class="letter_pressed light_header ">Sign In</h3>
    </header>
    <div class="form-body  row-fluid">
      <div class="span8">
        <div class="form-container">
        <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <%= f.error_notification %>

            <div class="form-inputs">
              <%= f.input :email, :required => false, :autofocus => true %>
              <%= f.input :password, :required => false %>
              <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
            </div>

            <div class="form-actions">
              <button class="btn btn-warning" type="submit">Sign In</button>
              <%= render "devise/shared/links" %>
            </div>
        <% end %>
        </div>
      </div>

      <div class="span4">
        <div class="form-container">
                  <div class="ad1">
                    <h5 class="light_header">
                      Sign up for free!
                    </h5>
                  </div>
                  <ul class="todo">
                            <li>
                              <p>Branch in to your organization or create a tree for your organization</p>
                            </li>
                            <li>
                              <p>Bookmark, search and share your tips &mdash; experience, knowledge, how tos</p>
                            </li>
                            <li>
                               <p>Are you stuck on something? Get live support and assistance from your branches</p>
                            </li>
                          </ul>
                      <a class="btn ">Learn More</a>
          </div>
                </div>
    </div>

  </div>
</div>