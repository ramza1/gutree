<div  id="register" class="modal-form no-shadow">
  <div class="modal-header"></div>
    <div class="form-box">
      <header class="ui-min-header">
        <h3 class="letter_pressed light_header ">Sign Up</h3>
      </header>
      <div class="form-body  row-fluid">
        <div class="span8">
          <div class="form-container">
            <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
                <%= f.error_notification %>
                <div class="form-inputs">
                  <%= f.input :email%>
                  <%= f.input :password%>
                  <%= f.input :password_confirmation,:label => 'Re-Type Password' %>
                </div>

                <div class="form-actions">
                  <button class="btn btn-warning" type="submit">Sign Up</button>
                  <%= link_to "Sign in", new_session_path(resource_name) ,class:"btn"%>
                      </div>
            <% end %>
          </div>
        </div>
        <div class="span4">
          <div class="form-container">
            <div class="ad1">
              <h5 class="light_header">
                Sign up for free!
              </h5>
            </div>
            <ul class="todo">
              <li>
                <p>Branch in to your organization or create a tree for your organization</p>
              </li>
              <li>
                <p>Bookmark, search and share your tips &mdash; experience, knowledge, how tos</p>
              </li>
              <li>
                <p>Are you stuck on something? Get live support and assistance from your branches</p>
              </li>
            </ul>
            <a class="btn ">Learn More</a>
          </div>
        </div>
      </div>
    </div>
</div>